<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
    android:id="@+id/iv_service_code"
    android:layout_width="60dp"
    android:layout_height="60dp" android:layout_gravity="center"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:id="@+id/service_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"/>

        <TextView
            android:id="@+id/service_etd"
            android:layout_width="match_parent" android:layout_span="2" android:textColor="@color/white" android:textStyle="bold"
            android:layout_height="wrap_content" android:padding="5dp"/>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>