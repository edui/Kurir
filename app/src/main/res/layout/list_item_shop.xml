<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:gravity="center"
    android:padding="5dp" >
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_img"
        android:layout_alignRight="@+id/item_img"
        android:layout_alignBottom="@+id/item_img" android:visibility="gone"
        android:gravity="right" android:textColor="@color/colorAccent"
        android:text="Open"
        />
    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="5dp"
        android:layout_below="@id/item_img" android:visibility="gone"
        android:gravity="center"
        android:textSize="15sp" >
    </TextView>

</RelativeLayout>