<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">
    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent" android:weightSum="1"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCarTitle" android:layout_weight=".5"
                style="@style/titleBoldTextStyle"
                android:padding="8dp" />
            <ImageView
                android:id="@+id/ivCarPromo" android:visibility="gone"
                android:layout_width="match_parent" android:layout_weight=".5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:weightSum="1"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent" android:layout_weight=".5"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="90dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/placeholder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:gravity="center" android:layout_weight=".5"
                android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivRental1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvRental1"
                        android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Tujuan"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivRental2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvRental2"
                        android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Tanggal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivRental3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvRental3"
                        android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Fasilitas"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivRental4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvRental4"
                        android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Harga"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
