<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:gravity="center"
    android:padding="5dp" >
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_img"
        android:layout_alignRight="@+id/item_img"
        android:layout_alignBottom="@+id/item_img" android:visibility="gone"
        android:gravity="right" android:textColor="@color/colorAccent"
        android:text="Open"
        />
    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="5dp"
        android:layout_below="@id/item_img" android:visibility="gone"
        android:gravity="center"
        android:textSize="15sp" >
    </TextView>

    <LinearLayout
        android:layout_below="@id/item_text"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnEdit" android:layout_width="30dp" android:layout_height="30dp"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_create_black_18dp" android:background="@color/white"
            />
        <ImageButton
            android:id="@+id/btnDelete" android:layout_width="30dp" android:layout_height="30dp"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_close_black_18dp" android:background="@color/white"
            />
        <ImageButton
            android:id="@+id/btnActivate" android:layout_width="30dp" android:layout_height="30dp"
            android:layout_gravity="left|top"
            android:src="@drawable/connect"  android:background="@color/white"/>

    </LinearLayout>

</RelativeLayout>