<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <TableRow
        android:padding="5dp">

        <TextView
            android:id="@+id/packet_resi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/packet_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"/>
    </TableRow>
    <TableRow
        android:padding="5dp">

        <TextView
            android:id="@+id/packet_kota_asal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/packet_kota_tujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"/>
    </TableRow>

    <TableRow
        android:padding="5dp">

        <TextView
            android:id="@+id/packet_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/packet_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"/>
    </TableRow>
</TableLayout>