<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/input_pembayaran_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dp"
        android:gravity="center" android:layout_marginBottom="10dp"
        android:textSize="15sp" android:text="Pembayaran"/>
    <RadioGroup
        android:id="@+id/rdogrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" android:layout_marginLeft="30dp"
        android:gravity="left" android:layout_gravity="center"
        android:orientation="vertical" >
        <RadioButton
            android:id="@+id/radio_input_cod"
            android:layout_width="wrap_content" android:padding="10dp"
            android:layout_height="wrap_content" android:text="COD (Cash On Delivery)" android:textSize="12sp" />
        <RadioButton
            android:id="@+id/radio_input_transfer"
            android:layout_width="wrap_content" android:padding="10dp"
            android:layout_height="wrap_content" android:text="Transfer Bank" android:textSize="12sp" />
        <RadioButton
            android:id="@+id/radio_input_topup"
            android:layout_width="wrap_content" android:padding="10dp" android:enabled="false"
            android:layout_height="wrap_content" android:text="T O P U P" android:textSize="12sp" />
    </RadioGroup>
</android.support.v7.widget.LinearLayoutCompat>
</ScrollView>
