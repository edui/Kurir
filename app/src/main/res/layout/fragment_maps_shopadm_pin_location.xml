<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/origin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:minHeight="50dp"
            android:orientation="horizontal" android:weightSum="1">
            <ImageView
                android:id="@+id/iconOrigin"
                android:layout_width="match_parent" android:layout_weight=".85"
                android:layout_height="wrap_content"
                android:src="@drawable/origin_pin"
                android:layout_alignParentRight="true"
                android:layout_gravity="center|top"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent" android:layout_weight=".15"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tvOriginLayout"
                    android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tvOrigin"
                        android:layout_width="match_parent" android:layout_weight=".2" android:lines="2" android:maxLines="2"
                        android:layout_height="40dp" android:text="Set Lokasi Anda" android:gravity="center_vertical|left" android:layout_gravity="center_vertical" />
                    <id.co.kurindo.kurindo.map.ClearableAutoCompleteTextView
                        android:id="@+id/tvOriginAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="Set Lokasi Anda" android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/ivAddOriginNotes" android:visibility="gone"
                        android:layout_width="match_parent" android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_description_black_18dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|top"
                        android:padding="5dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/etOriginNotes"
                    android:layout_width="match_parent" android:textSize="10sp"
                    android:layout_height="wrap_content" android:hint="Add Notes" android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_toolbar">

        <fragment
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/locationMarker" android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/locationMarkertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_map"
                android:gravity="center"
                android:minWidth="250dp"
                android:minHeight="50dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text=" Set your Location "
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/origin_pin" />
        </LinearLayout>

    </FrameLayout>
<RelativeLayout
    android:layout_width="match_parent" android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent" android:background="@color/white"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
        android:id="@+id/orderInfo_layout" android:visibility="gone"
            android:layout_width="match_parent" android:background="@color/colorAccent"
            android:layout_height="40dp" android:orientation="horizontal" android:weightSum="1">
            <TextView
                android:layout_width="wrap_content" android:gravity="center_vertical|left" android:textColor="@color/white" android:padding="10dp"
                android:layout_height="match_parent" android:text="Data Cabang" android:layout_weight=".9"/>
            <ImageView
                android:id="@+id/ivSwitchInfo"
                android:layout_width="wrap_content" android:layout_weight=".1" android:layout_gravity="center" android:gravity="center_vertical|right" android:textColor="@color/white"
                android:layout_height="wrap_content" android:src="@drawable/ic_expand_more_black_18dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/service_layout" android:background="@color/white"
            android:layout_margin="2dp"
            android:layout_height="180dp" android:minHeight="50dp"
            android:layout_width="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content" android:gravity="center_vertical|bottom"
                    android:layout_height="wrap_content" android:text="Pilih Pengelola dari daftar " />
                <ImageButton
                    android:id="@+id/btnPilihPengelola"
                    android:layout_width="40dp" android:gravity="center_vertical|top"
                    android:layout_height="40dp" android:src="@drawable/ic_person_add_black_18dp"/>
            </LinearLayout>
            <com.lamudi.phonefield.PhoneInputLayout android:clickable="false"
                android:id="@+id/input_telepon" android:hint="Telepon Pengelola" android:drawableLeft="@drawable/ic_phone_black"
                android:layout_width="match_parent"   android:layout_height="wrap_content"
                android:textSize="14dp" >
            </com.lamudi.phonefield.PhoneInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content" android:gravity="center_vertical|left"
                    android:layout_height="wrap_content" android:text="Level" android:layout_weight=".7"/>
                <Spinner
                    android:id="@+id/input_levels" android:layout_weight=".3"
                    android:layout_margin="8dp" android:layout_gravity="center_vertical|left" android:gravity="center_vertical|left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
                <TextView
                    android:layout_width="match_parent" android:gravity="center_vertical|left"
                    android:layout_height="wrap_content" android:text="Tipe" android:layout_weight=".7"/>
                <RadioGroup
                    android:id="@+id/rgShopType" android:layout_weight=".3"
                    android:layout_width="match_parent" android:layout_gravity="center_vertical|left"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:weightSum="1"
                    android:gravity="left"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/radio_main"
                        android:layout_width="wrap_content" android:padding="5dp" android:layout_weight=".5"
                        android:background="@drawable/btn_toggle_selector" android:button="@null" android:layout_gravity="center_vertical|left" android:gravity="center_vertical|left"
                        android:layout_height="40dp" android:text="KANTOR PUSAT" android:textSize="12dp" />
                    <RadioButton
                        android:id="@+id/radio_branch"
                        android:layout_width="wrap_content" android:padding="5dp" android:layout_weight=".5"
                        android:background="@drawable/btn_toggle_selector" android:button="@null" android:layout_gravity="center_vertical|left" android:gravity="center_vertical|left" android:checked="true"
                        android:layout_height="40dp" android:text="CABANG" android:textSize="12dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

</RelativeLayout>
