<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent" android:weightSum="1"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCarTitle"
            android:layout_width="match_parent" android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:padding="8dp" android:text="Title" android:textStyle="bold"
            android:textSize="14dp"/>
        <ImageView
            android:id="@+id/ivCarPromo"
            android:layout_width="match_parent" android:layout_weight=".5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:weightSum="1"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight=".5"
            android:layout_height="wrap_content" android:orientation="vertical">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder"/>
            <LinearLayout
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/rbCarRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="2.0" />
                <TextView
                    android:id="@+id/tvCarRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" android:text="Title"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight=".5"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content" android:background="@color/colorPrimary" android:textColor="@color/white"
                android:padding="8dp" android:text="Title"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent" android:weightSum="1" android:layout_marginTop="5dp"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec1"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec2"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:weightSum="1"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec3"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec4"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:weightSum="1"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec5"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight=".5"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivSpec6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"/>
                    <TextView
                        android:id="@+id/tvSpec6"
                        android:layout_width="match_parent" android:textSize="12dp"
                        android:layout_height="wrap_content" android:text="Spec"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content" android:layout_weight=".5"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:id="@+id/tvRentalRateTitle"
                android:layout_width="match_parent" android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:padding="8dp" android:text="Title"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/rbRentalRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.5" />
                <TextView
                    android:id="@+id/tvRentalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" android:text="Title"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.AppCompatButton android:layout_weight=".5"
            android:id="@+id/btnViewDetil" android:background="@color/colorAccent" android:textColor="@color/white"
            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="center" android:layout_margin="12dp"
            android:layout_height="wrap_content" android:text="Pesan"/>
    </LinearLayout>
 </LinearLayout>