<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small"
    >
    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp" android:gravity="center" android:layout_gravity="center"
            android:layout_height="50dp" android:src="@drawable/do_car_icon"/>
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="50dp" android:orientation="vertical" android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="match_parent"  android:textColor="@color/white" android:gravity="center" android:background="@color/colorPrimary"
                android:layout_height="wrap_content" android:text="Detail Mobil" android:textStyle="bold" android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llLayout"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="match_parent" android:weightSum="1"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent" android:layout_weight=".4" android:gravity="left|center_vertical" android:layout_gravity="center"
                        android:layout_height="wrap_content" android:text="Mobil"  android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".6"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/rbRentalRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content" android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="3.5" />
                        <TextView
                            android:id="@+id/tvRentalRating"
                            android:layout_width="wrap_content" android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:padding="8dp" android:text="Rate"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin">
                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".33"
                        android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvAc"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="AC Mobil"/>
                        <TextView
                            android:id="@+id/tvRatingAc"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="5.0"/>
                        <RatingBar
                            android:id="@+id/rbRatingAc"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="3.5" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".34"
                        android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvKebersihan"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="Kebersihan"/>
                        <TextView
                            android:id="@+id/tvRatingKebersihan"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="5.0"/>
                        <RatingBar
                            android:id="@+id/rbRatingKebersihan"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="3.5" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".33"
                        android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvKondisi"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="Kondisi"/>
                        <TextView
                            android:id="@+id/tvRatingKondisi"
                            android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content" android:text="5.0"/>
                        <RatingBar
                            android:id="@+id/rbRatingKondisi"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="3.5" />
                    </LinearLayout>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_margin="@dimen/card_margin"
                android:layout_width="match_parent" android:background="@color/ms_material_grey_400"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:id="@+id/tvUlasan" android:padding="5dp"
                    android:layout_width="match_parent"   android:gravity="center" android:layout_gravity="center"
                    android:layout_height="wrap_content" android:text="Ulasan"/>
            </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="@string/spesifikasi_mobil"/>
                <LinearLayout
                    android:layout_width="match_parent" android:weightSum="1"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".33"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec1"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec2" android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".34"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec3" android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec4"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec4" android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_weight=".33"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec5"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec5" android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent" android:layout_marginTop="2dp"
                                android:layout_height="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/ivSpec6"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/tvSpec6" android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent" android:textSize="12dp"
                                    android:layout_height="wrap_content" android:text="Spec"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent" android:layout_marginTop="2dp"
                    android:layout_height="wrap_content" android:text="@string/deskripsi_mobil"/>
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text=""/>
            </LinearLayout>
            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin">
                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:text="@string/detail_pesanan"/>
                    <LinearLayout
                        android:layout_width="match_parent" android:weightSum="1" android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent" android:layout_weight=".7"
                            android:layout_height="wrap_content" android:text="@string/tujuan"/>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_weight=".3"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivRental1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/placeholder"/>
                            <TextView
                                android:id="@+id/tvRental1"
                                android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                                android:layout_height="wrap_content" android:text="Tujuan"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:weightSum="1"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent" android:layout_weight=".7"
                            android:layout_height="wrap_content" android:text="@string/tanggal"/>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_weight=".3"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivRental2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/placeholder"/>
                            <TextView
                                android:id="@+id/tvRental2"
                                android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                                android:layout_height="wrap_content" android:text="Tanggal"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:weightSum="1"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent" android:layout_weight=".7"
                            android:layout_height="wrap_content" android:text="@string/durasi"/>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_weight=".3"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivRental3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/placeholder"/>
                            <TextView
                                android:id="@+id/tvRental3"
                                android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                                android:layout_height="wrap_content" android:text="Durasi"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:weightSum="1"
                        android:layout_height="wrap_content" android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent" android:layout_weight=".7"
                            android:layout_height="wrap_content" android:text="@string/fasilitas"/>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_weight=".3"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ivRental4" android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/placeholder"/>
                            <TextView
                                android:id="@+id/tvRental4"
                                android:layout_width="match_parent" android:layout_marginLeft="2dp" android:textSize="12dp"
                                android:layout_height="wrap_content" android:text="Fasilitas"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_marginTop="5dp"
                        android:layout_height="wrap_content" android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent" android:background="@color/colorPrimary" android:padding="8dp" android:weightSum="1"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent" android:textColor="@color/white" android:layout_gravity="left|center_vertical"
                                android:layout_weight=".5" android:textSize="16dp" android:textStyle="bold"
                                android:layout_height="wrap_content" android:text="Total Biaya Sewa"/>
                            <TextView
                                android:id="@+id/tvTotalPrice"
                                android:layout_width="match_parent" android:textColor="@color/white" android:gravity="right|center_vertical" android:layout_gravity="right|center_vertical"
                                android:layout_weight=".5" android:textSize="16dp" android:textStyle="bold"
                                android:layout_height="wrap_content" android:text="Rp 0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
                            <TextView
                                android:layout_width="match_parent" android:layout_weight=".65"
                                android:layout_height="wrap_content" android:text="@string/include_biaya"/>
                            <TextView
                                android:id="@+id/tvIncludeBiayaDetail"
                                android:layout_width="match_parent" android:layout_weight=".35"
                                android:layout_height="wrap_content" android:text=""/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent" android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
                            <TextView
                                android:layout_width="match_parent" android:layout_weight=".65"
                                android:layout_height="wrap_content" android:text="@string/exclude_biaya"/>
                            <TextView
                                android:id="@+id/tvExcludeBiayaDetail"
                                android:layout_width="match_parent" android:layout_weight=".35"
                                android:layout_height="wrap_content" android:text=""/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvRule"
                        android:layout_width="match_parent" android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" android:text="Rule Usage"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPesanSekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Pesan Sekarang"/>
</LinearLayout>