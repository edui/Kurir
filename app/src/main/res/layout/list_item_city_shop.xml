<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" android:layout_weight=".1"
            android:src="@drawable/do_shop_icon"/>
        <LinearLayout
            android:layout_width="wrap_content" android:layout_weight=".9"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:id="@+id/city_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp"/>
            <TextView
                android:id="@+id/tvPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp"/>
            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete" android:layout_height="50dp" android:layout_width="wrap_content"
            android:layout_gravity="left|top" android:theme="@style/AppTheme.Button"
            android:text="Delete" />

        <Button
            android:id="@+id/btnView"  android:layout_height="50dp" android:layout_width="wrap_content"
            android:layout_gravity="left|top" android:theme="@style/AppTheme.Button"
            android:text="View" />
    </LinearLayout>

</LinearLayout>
