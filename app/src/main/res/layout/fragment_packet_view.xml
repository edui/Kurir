<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_marginTop="20dp" android:background="@color/colorPrimary"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:text="Detil Paket" android:textStyle="italic" android:gravity="center"
            android:textSize="16dp" android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_info_paket"
            android:layout_width="match_parent" android:textColor="@color/white"
            android:layout_height="wrap_content" android:gravity="center"
            android:text="Packet"
            android:textSize="16dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent" android:layout_margin="5dp"
            android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
            <TextView
                android:id="@+id/text_berat_paket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp" android:textColor="@color/white"
                android:text="Berat paket" android:layout_weight=".5"
                />

            <TextView
                android:id="@+id/text_ongkos_paket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp" android:textColor="@color/white"
                android:text="Ongkos Paket" android:layout_weight=".5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_margin="2dp" android:background="@color/white"
            android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
            <TextView
                android:id="@+id/text_kota_pengirim" android:layout_weight=".5" android:layout_margin="3dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Kota Asal" android:textSize="16dp" android:textStyle="bold" />

            <TextView
                android:id="@+id/text_kota_penerima" android:layout_weight=".5" android:layout_margin="3dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Kota Tujuan" android:textSize="16dp" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_margin="2dp" android:background="@color/white"
            android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_weight=".5"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengirim" android:layout_gravity="center_horizontal" android:textStyle="italic|bold"
                    android:textSize="12dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_nama_pengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pengirim"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_gender_pengirim" android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_telepon_pengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="021"
                        android:autoLink="phone"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_alamat_pengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Pengirim"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:gravity="right" android:layout_marginTop="10dp" android:layout_weight=".5"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penerima" android:layout_gravity="center_horizontal" android:textStyle="italic|bold"
                    android:textSize="12dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_nama_penerima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Penerima"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_gender_penerima" android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_telepon_penerima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="021"
                        android:autoLink="phone"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_alamat_penerima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Penerima"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="2dp" android:background="@color/white"
        android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLihatRute"
            android:layout_width="wrap_content" android:layout_gravity="center"
            android:layout_height="wrap_content" android:text="Lihat Rute" android:textColor="@color/white" android:background="@drawable/rounded_corner_map_primary" android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
