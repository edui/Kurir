<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.kurindo.kurindo">
    <!-- -kurindo2016key kurindoKey kurindo2016key -->

    <uses-sdk android:minSdkVersion="8" />
    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" android:name=".app.AppController">

        <activity
            android:name=".SplashScreenActivity" android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainDrawerActivity" android:screenOrientation="portrait"
            android:icon="@drawable/logo_kurindo">
        </activity>

        <activity android:name=".PacketOrderActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".PacketCheckActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".PacketShowActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>

        <activity android:name=".MonitorPacketActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".AdminMonitorOrderActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".MonitorOrderActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>

        <activity android:name=".LoginActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".SignupActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".ActivationActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".WaitingApprovalActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />

        <activity android:name=".DetailImageActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>

        <activity android:name=".ProductActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".ShoppingCartActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".ShopActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".CartDrawerActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".CheckoutActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".wizard.ShopCheckoutActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" />
        <activity android:name=".SimpleOrderActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".OrderShowActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".wizard.AcceptOrderActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MonitorOrderActivity" />
        </activity>
        <activity android:name=".wizard.RejectOrderActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MonitorOrderActivity" />
        </activity>
        <activity android:name=".NewsShowActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".KerjasamaActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>
        <activity android:name=".KurirActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainDrawerActivity" />
        </activity>

        <meta-data android:name="id.co.kurindo.kurindo.util.GlideConfiguration" android:value="GlideModule"/>


        <service android:name=".firebase.KurindoFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name=".firebase.KurindoFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>
